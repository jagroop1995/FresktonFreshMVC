@{
    ViewBag.Title = "Contact";
}

<h2><font size="30" color="deeppink"> Contact Us...</font></h2>

<div class="container-fluid">
    <img src="~/images/font.jpg" class="fontr">
</div>

<br/><br /><br /><br /><br />
<div class="container-fluid contact">
    <div class="contact">

        <h1 align="center"><font size="20">Get in Touch </font></h1>
        <form method="post" action="passQuery" class="text-center">
            <p>Name</p>
            <input type="text" name="txtName" id="txtName" placeholder="Enter Name" class="form-control" required>
            <p>Contact</p>
            <input type="text" name="txtContact" id="txtContact" placeholder="Enter Contact" class="form-control" required>
            <p>Email</p>
            <input type="text" name="txtEmail" id="txtEmail" placeholder="Enter Email" class="form-control" required><br>

            <p>Mesaage</p>
            <input type="text" name="Mesaage"  id="txtMesaage" placeholder="Enter Message" class="form-control" required><br>

            <br>
            <input type="submit" name="submit" value="Pass Query" class="btn-primary" /><br>
        </form>
        <br />

    </div>

</div>